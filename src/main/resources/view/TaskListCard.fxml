<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" style="-fx-border-color: white white lightgray white; -fx-border-width: 0 0 1 0;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <GridPane stylesheets="@PanelTheme.css" HBox.hgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            </columnConstraints>
            <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label style="-fx-background-radius: 40; -fx-background-color: lightgray; -fx-text-fill: white;" styleClass="chip" stylesheets="@PanelTheme.css" text="Label">
                     <HBox.margin>
                        <Insets left="15.0" top="30.0" />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="10.0" />
                     </padding>
                  </Label>
                      <VBox alignment="CENTER_LEFT" minHeight="105.0">
                          <stylesheets>
                              <URL value="@DarkTheme.css" />
                              <URL value="@Extensions.css" />
                        <URL value="@PanelTheme.css" />
                          </stylesheets>
                          <padding>
                              <Insets bottom="5" left="15" right="5" top="5" />
                          </padding>
      
                          <children>
                              <HBox alignment="CENTER_LEFT" spacing="5">
                                  <children>
                                      <HBox>
                                          <Label fx:id="id" styleClass="cell_big_label" />
                                          <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
                                      </HBox>
                                  </children>
                              </HBox>
                              <FlowPane fx:id="tags" />
                              <Label fx:id="time" styleClass="cell_small_label" text="\$time" />
                              <Label fx:id="date" styleClass="cell_small_label" text="\$date" />
                              <Label fx:id="description" styleClass="cell_small_label" text="\$description" />
                          </children>
                      </VBox>
               </children>
            </HBox>
            </children>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </children>
</HBox>
