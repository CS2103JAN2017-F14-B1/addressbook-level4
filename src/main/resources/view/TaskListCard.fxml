<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" style="-fx-border-color: white white lightgray white; -fx-border-width: 0 0 1 0;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <GridPane stylesheets="@PanelTheme.css" HBox.hgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            </columnConstraints>
            <children>
            <HBox prefHeight="0.0" prefWidth="0.0">
               <children>
                  <Label fx:id="id" alignment="CENTER" contentDisplay="CENTER" minHeight="33.0" minWidth="33.0" style="-fx-background-radius: 40; -fx-background-color: lightgray; -fx-text-fill: white;" styleClass="chip" stylesheets="@PanelTheme.css" text="E1" textAlignment="CENTER" HBox.hgrow="NEVER">
                     <HBox.margin>
                        <Insets bottom="15.0" left="18.0" right="6.0" top="15.0" />
                     </HBox.margin>
                  </Label>
                      <VBox alignment="CENTER_LEFT">
                          <stylesheets>
                              <URL value="@DarkTheme.css" />
                              <URL value="@Extensions.css" />
                        <URL value="@PanelTheme.css" />
                          </stylesheets>
                          <padding>
                              <Insets bottom="5" left="15" right="5" top="5" />
                          </padding>
                          <children>
                              <HBox alignment="CENTER_LEFT" prefHeight="0.0">
                                  <children>
                                       <Label fx:id="name" styleClass="cell_big_label" stylesheets="@PanelTheme.css" text="\$first">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </Label>
                                  </children>
                              </HBox>
                              <FlowPane fx:id="tags" />
                        <HBox fx:id="dateBox" fillHeight="false" maxHeight="0.0" prefHeight="0.0" prefWidth="73.0">
                           <children>
                                    <Label fx:id="startDate" prefHeight="0.0" styleClass="cell_small_label" text="\$startDate" />
                                    <Label fx:id="endDate" prefHeight="0.0" styleClass="cell_small_label" text="\$endDate" />
                           </children>
                        </HBox>
                        <HBox fx:id="descriptionBox" fillHeight="false" maxHeight="0.0" prefHeight="0.0" prefWidth="73.0">
                           <children>
                                    <Label fx:id="description" styleClass="cell_small_label" text="\$description" />
                           </children>
                        </HBox>
                          </children>
                      </VBox>
               </children>
            </HBox>
            </children>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </children>
</HBox>
